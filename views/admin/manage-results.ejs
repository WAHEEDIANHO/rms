<%- include('partials/head') %>

    <body>
        <div class="container-fluid">
            <%- include('partials/header') %>
                <section class="row">
                    <%- include('partials/nav') %>
                        <div class="content offset-lg-3 col-lg-9 col-md-12 p-0 ">
                            <div class="w-100 p-2 bg-white mt-2 mb-2">
                                <h3 class=" modal-header">Manage Student</h3>
                                <div class="breadcrumb bg-transparent p-0">
                                    <div class="breadcrumb-item">Home</div>
                                    <div class="breadcrumb-item">Subject</div>
                                    <div class="breadcrumb-item">Manage-Students</div>
                                </div>
                            </div>

                            <!-- Modal -->
                            <%- include('../modal/prompt') %>

                                <div class="container-fluid">
                                    <div class="row>
                                        <div class="col-12">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h4 class="p-3">View Student Info</h4>
                                                </div>

                                                <div class=" card-body" id="overflow">
                                                    <table class="table table-bordered table-striped tdata">
                                                        <thead>
                                                            <th>#</th>
                                                            <th>Roll ID</th>
                                                            <th>Student Name</th>
                                                            <th>No of Result Upload</th>
                                                            <th>Date Modifield</th>
                                                            <th>Action</th>
                                                        </thead>
                                                        <tbody>
                                                            <% if (students.length !=0) { %>

                                                                <% students.forEach(student => { %>
                                                                    <tr>
                                                                        <td>
                                                                            <%= students.indexOf(student) + 1 %>
                                                                        </td>
                                                                        <td>
                                                                            <%= student.rollId %>
                                                                        </td>
                                                                        <td>
                                                                            <%= student.fname %>
                                                                        </td>
                                                                        <td>
                                                                            <%= student.result.length %>
                                                                        </td>
                                                                        
                                                                        <td>
                                                                            <%= student.updatedAt.toLocaleString() %>
                                                                        </td>
                                                                        <td>
                                                                            <i class="btn btn-info fa fa-edit btn-delete btn-lg"
                                                                                data-target="#delete"
                                                                                data-toggle="modal"
                                                                                id="<%= student._id %>"></i>
                                                                        </td>
                                                                    </tr>
                                                                    <% }) %>

                                                                        <% } else{%>
                                                                            <p>You have not register any Class</p>
                                                                            <% } %>


                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                        </div>
                </section>
        </div>

        <script src="/public/lib/jquery//jquery.min.js "></script>
        <script src="/public/lib/bootstrap/js/bootstrap.min.js "></script>
        <script src="/public//js/edit.js"></script>
        <script src="/public/js/ajaxDelete.js"></script>
        <script src="/public/js/admin.js"></script>

        <!-- datatable -->
        <script src="/public/lib/dt/datatables/jquery.dataTables.js"></script>
        <script src="/public/lib/dt/datatables-bs4/js/dataTables.bootstrap4.js"></script>
        <!-- <script src="/public/lib/dt/datatables-responsive/js/dataTables.responsive.js"></script> -->
        <script>
            const url = '<%= url %>'
            
            $(function () {
                $('.tdata').DataTable({
                    responsive: true
                })

                $('#prompt').DataTable({
                    paging: false,
                    searching: false,
                    ordering: false,
                    info: false,
                    responsive: true,
                })
            })
        </script>
       
    </body>
